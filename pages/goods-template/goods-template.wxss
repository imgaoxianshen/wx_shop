.good-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 500rpx;
  width: 360rpx;
}

.good-image {
  width: 360rpx;
  height: 400rpx;
}

.good-ticket {
  font-size: 25rpx;
  width: 340rpx;
  background-color: #f9f1e6;
  color: #a19273;
  text-align: center;
  border-radius: 5rpx;
  padding: 5rpx;
}

.good-container:nth-of-type(odd) {
  border-right: 1px solid #f4f4f4;
  border-bottom: 1px solid #f4f4f4;
}

.good-container:nth-of-type(even) {
  border-bottom: 1px solid #f4f4f4;
}

.good-name {
  font-size: 25rpx;
  margin-top: 10rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.good-price {
  font-size: 26rpx;
  color: red;
}
