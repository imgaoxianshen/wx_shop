/* pages/pay_fail/pay_fail.wxss */
page {
  background: white;
}
.all{
  width: 100%;
  margin: 0 auto
}
.top{
  width: 100%;
  border-bottom: 10px solid #F2F2F2; 
}
.fail{
  width: 100%;
  height: 60px;
  line-height: 60px;
  font-family: "KaiTi";
  text-align: center;
  font-size: 16px;
}
.con{
  width: 100%;
font-size: 14px;
text-align: center
}
.quxiao{
  width: 100%;
font-size: 14px;
text-align: center
}

.but{
  width: 100%;
  display: flex;
  display: -webkit-flex; /* Safari */
  flex-direction: row ;
  flex-wrap: wrap ;
  height: 80px;
  line-height: 80px;
  font-size: 15px;
}
.chakan{
  width: 50%;
  text-align: right
}
.chakan text{
  padding: 5px 10px;
  color: 	#696969;
  border:  1px solid 	#696969;
  margin-right: 15px;
  border-radius: 3px;
}
.zhifu{
  width: 50%;
}
.zhifu text{
  padding: 5px 10px;
  color: 	red;
  border:  1px solid 	red;
  margin-left: 15px;
  border-radius: 3px;
}
.info{
  width: 100%;
  margin: 0 auto;
  font-size: 15px;
  border-bottom: 10px solid #F2F2F2; 
}
.one,.two,.three{
  width: 100%;
  height: 30px;line-height: 30px;
  display: flex;
  display: -webkit-flex; /* Safari */
  flex-direction: row ;
  flex-wrap: wrap ;
}
.left{
  margin-left: 5%;
  width: 22%;
}
.right{
  width: 73%;
  
}
.right1{
  width: 100%;
}
.one{
  margin-top: 10px;
}
.three{
  height: 90px;
  margin-bottom: 10px
}


.title{
  text-align: center;
  width: 100%;
  height: 40px;
  line-height: 40px;
  font-size: 15px;
  border-bottom: 1px solid #F2F2F2; 
}
.box{
  display: flex;
  display: -webkit-flex; /* Safari */
  flex-direction: row ;
  flex-wrap: wrap 
}
.list{
  box-sizing: border-box;
  width: 50%;
  border-right: 1px solid #F4F4F4;
  border-bottom: 1px solid #F4F4F4
}
.list image{
  width: 98%;
  margin-left: 1%;
  height: 210px;
}
.goods_title{
  width: 90%;
  margin-left: 5%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: left;
  font-size: 15px;
  height: 30px;
  line-height: 30px;
}
.goods_price{
  width: 90%;
  margin-left: 5%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: left;
  font-size: 16px;
  color: red;
  height: 30px;
  line-height: 30px;
}