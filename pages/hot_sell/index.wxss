/* pages/hot_sell/index.wxss */
.title{
  text-align: center;
  width: 100%;
  height: 60px;
  line-height: 60px;
  font-size: 15px;
  background: #F4F4F4;
}
.box{
  display: flex;
  display: -webkit-flex; /* Safari */
  flex-direction: row ;
  flex-wrap: wrap;
  margin-top: 5rpx; 
}
.list{
  box-sizing: border-box;
  width: 50%;
  border-right: 1px solid #F4F4F4;
  border-bottom: 1px solid #F4F4F4
}
.list image{
  width: 98%;
  margin-left: 1%;
  height: 210px;
}
.goods_title{
  width: 90%;
  margin-left: 5%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: left;
  font-size: 15px;
  height: 30px;
  line-height: 30px;
}
.goods_price{
  width: 90%;
  margin-left: 5%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: left;
  font-size: 16px;
  color: red;
  height: 30px;
  line-height: 30px;
}
